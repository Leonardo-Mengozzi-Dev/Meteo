@inherits LayoutComponentBase

<div class="container-fluid">

    <Header />

    <!-- main -->
    <div class="content row">
        @* nav *@
        <Nav />

        @* body *@
        <main class="col-md-9">
        <ErrorBoundary>
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent Context="ex">
                    <FinestraModaleErrore Titolo="Errore">
                        <div class="row">
                            <p>@ex.Message</p>
                        </div>
                    </FinestraModaleErrore>
            </ErrorContent>
        </ErrorBoundary>
        </main>
    </div>

    @* footer *@
    <Footer />

</div>